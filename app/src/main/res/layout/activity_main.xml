<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    style="?android:attr/buttonBarStyle">

    <TextView
        android:id="@+id/txt_departement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_nomDepartement"
        style="@style/texteAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_precedent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_chevron_left_24"
            android:contentDescription="@string/btn_precedent" />

        <ImageButton
            android:id="@+id/btn_suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/btn_suivant"
            app:srcCompat="@drawable/ic_baseline_chevron_right_24" />
    </LinearLayout>
</LinearLayout>
